generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id           String        @id @default(cuid())
  name         String
  lat          Float
  lng          Float
  rank         Int           @default(3)
  class        PlaceClass    @default(amenity)
  subclass     PlaceSubClass @default(shop)
  keyword      String?
  requireCheck Boolean       @default(false)
  checkWith    String? // id of the source to check with
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

enum PlaceClass {
  amenity
}

enum PlaceSubClass {
  shop
  restaurant
  cafe
  bar
}
